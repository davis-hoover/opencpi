<!-- This time client is for clients that do not want the TOD in their own clock domain, but are happy
     accepting TOD in the native timekeepping clock domain.  Thus this time_client has a clock OUTPUT
     for the WTI interface. -->
<HdlWorker language='vhdl' library='platform'>
  <ComponentSpec nocontrol='true' package='ocpi.core'/>
  <timeservice myclock='true'/>
  <timeinterface master='true'  myoutputclock='true' fractionwidth='32'/>
</HdlWorker>
