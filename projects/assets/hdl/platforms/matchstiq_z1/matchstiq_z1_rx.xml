<!--
 Matchstiq-Z1 All Platform Configuration Definition
-->
<HdlConfig>
  <!-- I2C bus -->
  <device name="si5338"/>
  <device name="tmp100"/>
  <!-- The purpose of this device is unknown, thus there's no supporting proxy -->
  <!-- <device name="pca9534"/> -->
  <device name="pca9535"/>
  <device name="matchstiq_z1_avr"/>
  <!-- lime_rx control the lime_spi device for configuring the lime -->
  <device name="lime_rx"/>
  <!-- GPS -->
  <device name="gps_uart"/>
  <!-- 1 RX channel(s), 0 TX channel(s) data interface(s) -->
  <device name="lime_adc"/> <!-- connection must be defined in a container -->
</HdlConfig>
