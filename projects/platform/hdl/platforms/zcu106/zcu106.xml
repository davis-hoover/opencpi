    <signal slot='DP8_C2M_N' platform=''/>
    <signal slot='DP9_C2M_P' platform=''/>
    <signal slot='DP9_C2M_N' platform=''/>
    <signal slot='PG_C2M' platform=''/>
  </slot> 

  <signal  output='leds' width='4'/>
  <signal name='leds(0)' platform="GPIO_LED_0_LS"/>
