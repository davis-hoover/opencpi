<!-- Example system.xml file that goes into /opt/opencpi.
    This one shows an example linking a JTAG pod serial number to a card in a PCI slot -->
<opencpi>
  <container>
    <rcc load='1'/>
    <ocl load='0'/>
    <remote load='1'/>
    <hdl load='1'>
    <!-- <device name="0000:05:00.0" esn="000013C1E1F401"/> -->
    </hdl>
  </container>
  <transfer smbsize='100M'>
    <pio load='1'/>
    <dma load='1'/>
    <socket load='1'/>
  </transfer>
</opencpi>
